<tr rel="<%= task.id %>" >
	<td><%= check_box_tag "#{task.id}", "checkbox", false, :class => "checkbox" %> <%= link_to "Mark as Completed", complete_task_path(task), remote: true, :class => "completed_button #{task.id} hidden" %>
		<% if task.is_overdue? %>
			&nbsp;<span class="label label-important">OVERDUE</span>
		<% end %>
	</td>
	<td><%= task.task %><br>
		<% unless hide_contact %>
			<em><%= link_to task.contact.fullname.titleize, contact_path(task.contact_id) %></em> by <strong><%= task.due_date.strftime('%m/%d/%Y') %></strong><br>
		<% else %>
			<strong>Due by <%= task.due_date.strftime('%m/%d/%Y') %></strong><br>
		<% end %>
		<span class="label label-info"><%= task.category %></span>
	</td>	
	<td class="actions">
		<div class="btn-group pull-right">
			<a class="btn btn-inverse dropdown-toggle" data-toggle="dropdown" href="#">Action <span class="caret"></span></a>
			<ul class="dropdown-menu">
				<li>
					<%= link_to edit_button, edit_task_path(task, contact_id: task.contact_id) %>
				</li>
				<li class="divider"></li>
				<li>
					<%= link_to delete_button, task_path(task), :method => :delete, data: { confirm: 'Are you sure?'}%>
				</li>
				<% unless hide_contact %>
					<li class="divider"></li>
					<li>
						<%= link_to contact_button, contact_path(task.contact_id) %>
					</li>
				<% end %>
			</ul>
		</div> 
	</td>
</tr>