<tr>
	<td>
		<%= link_to occasion.contact.fullname.titleize, contact_path(occasion.contact_id) %>
		<span class="slash">/</span>
		<%= occasion.occasion %>
		<span class="slash">/</span>
		<%= occasion.special_date.strftime('%m/%d/%Y') %>
	<td>
		<span class="pull-right">
			<div class="btn-group pull-right">
			<a class="btn btn-inverse dropdown-toggle" data-toggle="dropdown" href="#">Action <span class="caret"></span></a>
			<ul class="dropdown-menu">
				<li>
					<%= link_to contact_button, contact_path(occasion.contact_id) %>
				</li>
				<li class="divider"></li>
				<li>
					<%= link_to edit_button, edit_occasion_path(occasion, contact_id: occasion.contact_id) %>
				</li>
				<li class="divider"></li>
				<li>
					<%= link_to delete_button, occasion, method: :delete, data: { confirm: 'Are you sure?' }%>
				</li>
			</ul>
		</div> 
		</span>
	</td>
</tr>