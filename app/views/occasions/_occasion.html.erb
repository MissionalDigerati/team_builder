<tr>
	<td><%= link_to occasion.contact.fullname.titleize, contact_path(occasion.contact_id) %></td>
	<td><%= occasion.occasion %></td>
	<td><%= occasion.special_date.strftime('%m/%d/%Y') %></td>
	<td><%= occasion.created_at.strftime('%m/%d/%Y') %></td>
	<td class="text_center"><%= link_to edit_button, edit_occasion_path(occasion, contact_id: occasion.contact_id), :class => "btn btn-success btn-small"  %> <%= link_to delete_button, occasion, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-small"  %> <%= link_to contact_button, contact_path(occasion.contact_id), :class => "btn btn-info btn-small"  %>
	</td>
</tr>