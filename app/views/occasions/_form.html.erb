<%= form_for([@contact, @occasions]) do |f| %>
		<%= f.label :contact_id, "Contact" %><br/>
		<%= f.select(:contact_id, Contact.all.collect {|p| [ p.first_name, p.id ] }) %><br/>
		<%= f.label :day, "Day"%><br/>
		<%= f.select :day, Occasion::DAYS, :include_blank => true, :required => true %><br/>
		<%= f.label :month, "Month"%><br/>
		<%= f.select :month, Occasion::MONTHS, :include_blank => true %><br/>
		<%= f.label :year, "Year"%><br/>
		<%= f.select :year, Occasion::YEARS, :include_blank => true %><br/>
		<%= f.label :occasion, "Occasion"%><br/>
		<%= f.text_field :occasion, :required => true %><br/>
		<%= f.submit %>
<% end %>

