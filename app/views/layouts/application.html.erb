<!DOCTYPE html>
<html>
<head>
  <title>TeamBuilder</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<%= render 'layouts/navigation' %>
	<div class="container-fluid">
		
			<% if flash[:notice] %>
				<div class="alert">
					<a class="close" data-dismiss="alert" href="#">&times;</a>
					<%= flash[:notice] %>
				</div>
				<br/>
			<% end %>
	
			<% if flash[:alert] %>
				<div class="alert">
					<a class="close" data-dismiss="alert" href="#">&times;</a>
					<%= flash[:alert] %>
				</div>
				<br/>
			<% end %>
	</div> <!-- container-fluid -->		
	<%= render 'layouts/header' %>
	<%= render 'layouts/sidebar' %>
	<%= render 'layouts/mainbar' %>
	<%= yield %>
	<footer>
	  <div class="container-fluid">
	    <div class="row-fluid">
	      <div class="span12">
	            <div class="left">Built by <a href="https://github.com/naysayer">Naysayer</a> for  
	            <a href="http://missionaldigerati.org/">Missional Digerati</a> . &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; </div>
	      </div>
	    </div>
	  </div>
	</footer>
</body>
</html>
