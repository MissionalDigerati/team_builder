        		<% end %>
        	</li>
        	<li>
        		&nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
        	</li>
        </ul>

        <!-- Links -->
        <ul class="nav pull-right">
          <li class="dropdown pull-right">            
            <a data-toggle="dropdown" class="dropdown-toggle" href="#">
              <i class="icon-plus ico-white"></i> Add <b class="caret"></b>              
            </a>
            
            <!-- Dropdown menu -->
            <ul class="dropdown-menu">
            	<li><%= link_to "New Contact", new_contact_path %> </li>
				<li class="divider"></li>
				<li><%= link_to "New Donation", new_donation_path %></li>
				<li class="divider"></li>
				<li><%= link_to "New Note", new_note_path %></li>
				<li class="divider"></li>
				<li><%= link_to "New Special Date", new_occasion_path %></li>
				<li class="divider"></li>
				<li><%= link_to "New Phone Number", new_number_path %></li>
				<li class="divider"></li>
				<li><%= link_to "New Task", new_task_path %></li>
				<li class="divider"></li>
				<li><%= link_to "New Web Presence", new_presence_path %></li>
            </ul>
          </li>
          
        </ul>
      </div>

    </div>
  </div>
</div>
