<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <!-- Menu button for smallar screens -->
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span>Menu</span>
      </a>
      <!-- Site name for smallar screens -->
      <a href="index.html" class="brand hidden-desktop">TeamBuilder</a>
      <!-- Navigation starts -->
      <div class="nav-collapse collapse">        
        <!-- Search form -->
        <ul class="nav pull-left">
        	<li>
        		<%= form_tag contacts_path, :method => 'get' do%>
        			<%= text_field_tag :search, nil, :placeholder => (params[:search].present? ? params[:search] : "SearchContacts"), :class => "navbar-search search-query", :rel=>"tooltip", :title=>"Use this search bar tosearch through your contacts by name. Prefix your search query with # to search by tags.<br/><br/>Pressenter to search" %>
