<div class="container">
    <% if flash[:notice] %>
        <div class="alert alert-info" role="alert">
            <a class="close" data-dismiss="alert" href="#">&times;</a>
            <%= flash[:notice] %>
        </div>
    <% end %>

    <% if flash[:alert] %>
        <div class="alert alert-danger" role="alert">
            <a class="close" data-dismiss="alert" href="#">&times;</a>
            <%= flash[:alert] %>
        </div>
    <% end %>
</div>