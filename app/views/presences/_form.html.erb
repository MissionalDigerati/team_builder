<%= form_for([@presence]) do |f| %>
  <div class="row">

    <div class="col-md-3">
      <div class="form-group">
        <%= f.label :contact_id, "Contact" %>
        <%= f.select :contact_id, form_select, {}, class: 'form-control' %>
      </div>
    </div>

    <div class="col-md-3 col-md-offset-1">
      <div class="form-group">
        <%= f.label :site, "Social Media Site" %>
        <%= f.select :site, Presence::SITES, {}, class: 'form-control' %>
      </div>
    </div>

    <div class="col-md-3 col-md-offset-1">
      <div class="form-group">
        <%= f.label :url, "URL (Include the http://)" %>
        <%= f.text_field :url, id: "url", class: 'form-control'  %>
      </div>
    </div>

    <div class="col-md-1"></div>
    <div class="clear"></div>

  </div>

  <div class="row">

    <div class="col-md-3">
      <div class="form-group">
        <%= f.label :account, "Account" %>
        <%= f.text_field :account, id: "account", class: 'form-control'  %>
      </div>
    </div>

    <div class="col-md-3 col-md-offset-1"></div>

    <div class="col-md-3 col-md-offset-1"></div>

    <div class="col-md-1"></div>
    <div class="clear"></div>

  </div>

  <div class="row">

    <div class="col-md-12 text-center">
      <hr>
      <% if form_type == 'add' %>
        <%= f.submit :id => "Add Web Presence", :class => "btn btn-large btn-success" %>
      <% else %>
        <%= f.submit :id => "Update Web Presence", :class => "btn btn-large btn-success" %>
      <% end %>
    </div>

  </div>
<% end %>