<!-- phone numbers -->

<h3>Phone Number(s)</h3>
<br/>
<% if @number.length > 0 %>
<table>
	<thead>
		<th>Type</th>
		<th>Number</th>
		<th>Action</th>
	</thead>
<% @number.each do |number| %>
	<tr>
	<td><%= number.phone_type %></td>
	<td><%= number.number %></td>
	<td><%= link_to "Edit", edit_number_path(number, contact_id: number.contact_id ) %> | <%= link_to "Delete", number_path(number), :method => :delete, data: { confirm: 'Are you sure?'} %> </td>
	</tr>
<% end %>
</table>
<% end %>
<%= link_to "Add Phone Number", new_number_path(@contact)%>
<br/>
<br/>

