<%= link_to 'Home', root_path %>
</br>
<%= link_to 'Edit', edit_contact_path(@contact) %> |
<%= link_to 'Back', contacts_path %>
</br>


<div class="row-fluid">
	<div class="span3">
			<h3>Contact Info</h3>
			</br>
			</br>
			<table class="table contact table-striped table-bordered">
				<tr>
					<td>First Name:</td>
					<td><%= @contact.first_name %></td>
				</tr>
				<tr>
					<td>Last Name:</td>
					<td><%= @contact.last_name %></td>
				</tr>
				<tr>
					<td>Spouse Name:</td>
					<td><%= @contact.spouse_name %></td>
				</tr>
				<tr>
					<td>Email:</td>
					<td><%= @contact.email %></td>
				</tr>
				<tr>
					<td>Spouse Email:</td>
					<td><%= @contact.spouse_email %></td>
				</tr>
				<tr>
					<td>Tags:</td>
					<td><%= @contact.tags %></td>
				</tr>
				<tr>
					<td>Network:</td>
					<td><%= @contact.network %></td>
				</tr>
				<tr>
					<td>Address 1:</td>
					<td><%= @contact.address_1 %></td>
				</tr>
				<tr>
					<td>Address 2:</td>
					<td><%= @contact.address_2 %></td>
				</tr>
				<tr>
					<td>City:</td>
					<td><%= @contact.city %></td>
				</tr>
				<tr>
					<td>State:</td>
					<td><%= @contact.state_id %></td>
				</tr>
				<tr>
					<td>Zip:</td>
					<td><%= @contact.zip %></td>
				</tr>
				<tr>
					<td>Country:</td>
					<td><%= @contact.country_id %></td>
				</tr>
				<tr>
					<td>Children:</td>
					<td><%= @contact.children %></td>
				</tr>
				<tr>
					<td>Receive News Letter?</td>
					<td><%= @contact.news_letter(@contact.receive_newsletter) %></td>
				</tr>
			</table>
			<br/>
			<br/>
	</div>
	
	<div class="span9">
				<!-- phone numbers -->
			
				<h3>Phone Number(s)</h3>
				<br/>
				<% if @number.length > 0 %>
				<table class="table">
					<thead>
						<th>Type</th>
						<th>Number</th>
						<th>Action</th>
					</thead>
				<% @number.each do |number| %>
					<tr>
					<td><%= number.phone_type %></td>
					<td><%= number.number %></td>
					<td><%= link_to "Edit", edit_number_path(number, contact_id: number.contact_id ) %> | <%= link_to "Delete", number_path(number), :method => :delete, data: { confirm: 'Are you sure?'} %> </td>
					</tr>
				<% end %>
				</table>
				<% end %>
				<%= link_to "Add Phone Number", new_number_path(@contact)%>
				<br/>
				<br/>
		
			<!-- special occasion -->
			<h3>Special Dates</h3>
			<br/>
			<% if @occasion.length > 0 %>
			<table class="table">
				<thead>
					<th>Day</th>
					<th>Month</th>
					<th>Year</th>
					<th>Occasion</th>
					<th>Action</th>
				</thead>
			<% @occasion.each do |occasion| %>
				<tr>
				<td><%= occasion.day %></td>
				<td><%= occasion.month %></td>
				<td><%= occasion.year %></td>
				<td><%= occasion.occasion %></td>
				<td><%= link_to "Edit", edit_occasion_path(occasion, contact_id: occasion.contact_id) %> | <%= link_to "Delete", occasion_path(occasion), :method => :delete, data: { confirm: 'Are you sure?'} %> </td>
				</tr>
			<% end %>
			</table>
			<% end %>
			<br/>
			<%= link_to "Add Special Date", new_occasion_path(@contact) %>


			<!-- donation -->
			<h3>Donations</h3> <br/>
			<% if @donation.length > 0 %>
			<table class="table">
				<thead>
					<th>Date</th>
					<th>Amount</th>
					<th>Project</th>
					<th>Action</th>
				</thead>
			<% @donation.each do |donation| %>
				<tr>
				<td><%= donation.date %></td>
				<td><%= donation.amount %></td>
				<td><%= donation.project %></td>
				<td><%= link_to "Edit", edit_donation_path(donation, contact_id: donation.contact_id) %> | <%= link_to "Delete", donation_path(donation), :method => :delete, data: { confirm: 'Are you sure?'} %> </td>
				</tr>
			<% end %>
			</table>
			<% end %>
			<br/>
			<%= link_to "Add Donation", new_donation_path(contact_id: @contact.id) %>


		<div class="clear">
			
		</div>

			<!-- tasks -->

			<h3>Tasks</h3><br/>
			<% if @task.length > 0 %>
			<table class="table">
				<thead>
					<th>Completed?</th>
					<th>Task</th>
					<th>Due date</th>
					<th>Category</th>
					<th>Action</th>		
				</thead>
			<% @task.each do |task| %>
				<tr rel="<%= task.id %>" >
					<td><%= check_box_tag "#{task.id}", "checkbox", false, :class => "checkbox" %> <%= link_to "Mark as Completed", complete_task_path(task), remote: true, :class => "completed_button #{task.id} hidden" %></td>
					<td><%= task.task %></td>
					<td><%= task.due_date %></td>
					<td><%= task.category %></td>
					<td><%= link_to "Edit", edit_task_path(task, contact_id: task.contact_id) %> | <%= link_to "Delete", task_path(task), :method => :delete, data: { confirm: 'Are you sure?'} %> </td>
				</tr>
			<% end %>
			</table>
			<% end %>
			<br/>
			<%= link_to "Add Task", new_task_path(contact_id: @contact.id )%>


			<!-- Notes -->
			<br/>
			<br/>
			<h3>Notes</h3><br/>
			<% if @note.length > 0 %>
			<table class="table">
				<thead>
					<th>Note</th>
					<th>Action</th>
				</thead>
			<% @note.each do |note| %>
				<tr>
					<td><%= note.note %></td>
					<td><%= link_to "Edit", edit_note_path(note, contact_id: @contact.id)%> | <%= link_to "Delete", note_path(note, contact_id: @contact.id), :method => :delete, data: { confirm: 'Are you sure?'} %></td>
				</tr>
			<% end %>
			</table>
			<% end %>
			<%= link_to "Add Note", new_note_path(contact_id: @contact.id)%>

			<!-- web presence -->
			<br/>
			<br/>
			<h3>Web Presence</h3><br/>
			<% if @presence.length > 0 %>
			<table class="table">
				<thead>
					<th>Site</th>
					<th>URL</th>
					<th>Account</th>
					<th>Action</th>
				</thead>
			<% @presence.each do |presence| %>
				<tr>
					<td><%= presence.site %></td>
					<td><%= presence.url %></td>
					<td><%= presence.account %></td>
					<td><%= link_to "Edit", edit_presence_path(presence, contact_id: @contact.id) %> | <%= link_to "Delete", presence_path(presence), :method => :delete, data: { confirm: 'Are you sure?'} %> </td>
				</tr>
			<% end %>
			</table>
			<% end %>
			<%= link_to "Add Web Presence", new_presence_path(@contact) %>
	</div>
</div>
<br/>
<br/>




















