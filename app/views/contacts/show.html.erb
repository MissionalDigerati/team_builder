<h3>Tasks</h3><br/>
<% if @task.length > 0 %>
<table>
	<thead>
		<th>Completed?</th>
		<th>Task</th>
		<th>Due date</th>
		<th>Category</th>
		<th>Action</th>		
	</thead>
<% @task.each do |task| %>
	<tr rel="<%= task.id %>" >
		<td><%= task.completed %> <%= link_to "Mark as Completed", contact_complete_task_path(@contact, task), remote: true, :class => "completed_button" %></td>
		<td><%= task.task %></td>
		<td><%= task.due_date %></td>
		<td><%= task.category %></td>
		<td><%= link_to "Edit", edit_task_path(@contact, task) %> | <%= link_to "Delete", task_path(@contact, task), :method => :delete, data: { confirm: 'Are you sure?'} %> </td>
	</tr>
<% end %>
</table>
<% end %>
<br/>
<%= link_to "Add Task", new_task_path(@contact)%>


