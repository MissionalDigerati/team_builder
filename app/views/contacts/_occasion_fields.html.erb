<% default_date = Date.today.strftime('%d/%m/%Y') %>
<div class="row repeatable-inputs">
    <div class="col-md-3">
         <div class="control-group">
            <%= f.label :special_date, "Date" %>
            <div class="input-append date input-group date-picker" data-date-format="dd/mm/yyyy" data-date="<%= default_date %>">
                <%= f.text_field :special_date, id: "special_date", class: 'form-control due_date_field', value: default_date %>
                <span class="input-group-addon add-on">
                    <i class="fa fa-calendar"></i>
                </span>
            </div>
        </div>
    </div>

    <div class="col-md-3 col-md-offset-1">
        <div class="control-group">
            <%= f.label :occasion, "Occasion" %>
            <%= f.text_field :occasion, id: "occasion", class: 'form-control'  %>
        </div>
    </div>

    <div class="col-md-4 col-md-offset-1 text-right">
        <%= f.hidden_field :_destroy %>
        <%= link_to "Remove", '#', class: "remove_fields btn btn-sm btn-info" %>
    </div>
    <div class="clear"></div>
</div> <!-- row -->