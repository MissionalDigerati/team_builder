<%= form_for([@donations]) do |f| %>
	<%= f.label :contact_id, "Contact" %><br/>
	<%= f.select(:contact_id, Contact.all.collect {|p| [ p.first_name, p.id ] }) %><br/>
	<%= f.label :date, "Date" %><br/>
	<%= f.text_field :date %><br/>
	<%= f.label :amount, "Amount" %><br/>
	<%= f.text_field :amount %><br/>
	<%= f.label :project, "Project" %><br/>
	<%= f.text_field :project %><br/>
	
	<%= f.submit %>
<% end %>