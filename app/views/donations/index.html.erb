<div class="row-fluid">
	
	<div class="span3 beige round">
		
		<h3>Donation Summary</h3>
		<strong>Amount donated (this month):</strong><br/>
		<%= currency(Donation.this_month_sum) %><br/>
		<strong>Amount donated (this year):</strong><br/>
		<%= donation_this_year %><br/>
		<strong>Amount donated (all time):</strong><br/>
		<%= donations_all_time %><br/>
		<strong>Average Donation (all time):</strong><br/>
		<%= currency(Donation.average_donation) %><br/>
		<strong>Number of contacts that have donated:</strong><br/>
		<%= Contact.donated_contacts %><br/>
		
	</div>
	
	<div class="span9 table_container">
		
		<h1><%= link_to "All Donations", donations_path %></h1><br/>
		<%= paginate @donations, :theme => 'twitter-bootstrap' %>
		<%= link_to 'New Donation', new_donation_path, :class => "btn btn-primary pull-right" %>
		<br/><br/>
		<table class="table index table-bordered table-hover table-striped">
		  <tr>
		    <!-- <th>Name</th> -->
				<th>First Name</th>
				<th><%= sortable "donation_date", "Date (mm/dd/yyyy)" %></th>
				<th><%= sortable "amount" %></th>
				<th><%= sortable "project" %></th>
				<th><%= sortable "created_at", "Created" %></th>
				<th><%= sortable "updated_at", "Updated" %></th>
		    <th>Action</th>
		  </tr>

		<% @donations.each do |donation| %>
		  <tr>
				<td><%= link_to first_name(donation), contact_path(donation.contact_id) %></td>
				<td><%= donation.donation_date.strftime('%m/%d/%Y') %></td>
				<td><%= currency(donation.amount) %></td>
				<td><%= donation.project.capitalize %></td>
				<td><%= donation.created_at.strftime('%d/%m/%Y') %></td>
				<td><%= donation.updated_at.strftime('%d/%m/%Y') %></td>
				<td class="text_center"><%= link_to edit_button, edit_donation_path(donation, contact_id: donation.contact_id), :class => "btn btn-success btn-small"  %> <%= link_to delete_button, donation, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-small"  %> <%= link_to contact_button, contact_path(donation.contact_id), :class => "btn btn-info btn-small"  %></td>
		  </tr>
		<% end %>
		</table>

		<br />

		<%= link_to 'New Donation', new_donation_path, :class => "btn btn-primary pull-right" %>
		<%= paginate @donations, :theme => 'twitter-bootstrap' %>
	</div> <!-- span12 -->

</div> <!-- row fluid -->

