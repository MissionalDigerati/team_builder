<div class="widget">
    <div class="widget-head">
        <div class="pull-left">
            <%= title %>
        </div>
        <div class="widget-icons pull-right">
            <a href="#" class="wminimize"><i class="icon-chevron-up"></i></a> 
        </div>  
        <div class="clearfix"></div>
    </div>
    <div class="widget-content">
        <%= yield %>
        <div class="widget-foot text-right">
            <% if local_assigns.has_key? :footer_btn_link %>
                <%= link_to footer_btn_text, footer_btn_link, :class => "btn btn-primary presence" %>
            <% end %>
            <div class="clear"></div>
        </div>
    </div>
</div><!-- widget -->